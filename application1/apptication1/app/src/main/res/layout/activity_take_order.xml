<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityTakeOrder">

    <TextView
        android:id="@+id/texttableno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tableno"
        android:layout_margin="20dp"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/editTextTableno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_toRightOf="@+id/texttableno"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/textname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Customer name "
        android:layout_below="@id/texttableno"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"/>

    <EditText
        android:id="@+id/editTextname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_below="@+id/editTextTableno"
        android:layout_toRightOf="@id/textname"/>

    <TextView
        android:id="@+id/textmobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mobile no"
        android:layout_below="@id/textname"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"/>

    <EditText
        android:id="@+id/editTextmobileno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_below="@+id/editTextname"
        android:layout_toRightOf="@id/textmobile"/>

    <Button
        android:id="@+id/takeorderbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Take Order"
        android:layout_below="@id/editTextmobileno"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>